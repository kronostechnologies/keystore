{
    "name": "kronos/keystore",
    "description": "Simple key/value storage librairy",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Kronos\\Keystore\\": "src/Kronos/Keystore"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kronos\\Tests\\Keystore\\": "tests/Kronos/Tests/Keystore"
        }
    },
    "require": {
      "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "10.5.1",
        "vimeo/psalm": "5.16.0",
        "squizlabs/php_codesniffer": "3.7.2",
        "dealerdirect/phpcodesniffer-composer-installer": "1.0.0",
        "kronostechnologies/php-coding-standard": "2.0.0"
    },
    "suggest" : {
        "kronos/keystore-dbal": "^1.0.0",
        "kronos/keystore-encrypt": "^1.0.0"
    },
    "license": "MIT",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
